<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8">
    <title>Property Description</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;400;900&family=Ubuntu&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous"
          referrerpolicy="no-referrer" />

    <script src="https://kit.fontawesome.com/504d9b5831.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="./css/room.css">

</head>

<body>

    <section id="head">

        <div class="container-fluid">
            <!-- Nav Bar -->
            <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="">TravelBNB</a>
                <form class="navbar-form mx-auto my-auto" role="search">
                    <div class="input-group">
                        <input type="text" class="form-control-md-5 rounded-3" id="location" placeholder="Search for locations" name="location">
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-md rounded-3" style="padding:0;">
                                <img src="images/search.jpg" width="40" alt="search">
                            </button>
                        </span>
                    </div>
                </form>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link btn rounded-5" href=""> Switch to Hosting </a>
                    </li>
                    <li class="nav-item">
                        <div class="dropdown">
                            <a class="btn rounded-5" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa-solid fa-bars"></i><img src="images/profile.jpg" alt="profile" class="profile-img1">
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuLink">
                                <li><a class="dropdown-item" href="#"><b>Messages</b></a></li>
                                <li><a class="dropdown-item" href="#"><b>Notifications</b></a></li>
                                <li><a class="dropdown-item" href="#"><b>Trips</b></a></li>
                                <li><a class="dropdown-item" href="#"><b>Wishlists</b></a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item" href="#">Manage listings</a></li>
                                <li><a class="dropdown-item" href="#">Host an experience</a></li>
                                <li><a class="dropdown-item" href="#">Account</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item" href="#">Help</a></li>
                                <li><a class="dropdown-item" href="#">Log out</a></li>


                            </ul>
                        </div>
                    </li>
                </ul>

            </nav>
        </div>
        <div class="property-info1">
            <div class="property-title">
                <span id="property-name"><%= result[0].PROPERTYNAME %> </span>
                    <button class="btn rounded-3 wishlist" type="button" style="border:3px solid black" onclick="change(this)" id="wish">Add to Wishlist</button>
                    <br />
                <a href="#" class="link-dark location"><span id="pLocation"><%= result[0].COUNTRY %> </span></a>
            </div>

            <div class="container property-img-div">
                <div id="show-photos" class="carousel slide" data-bs-ride="carousel" data-interval="1000" data->
                    <div class="carousel-inner">
                        <% array.forEach(element => { %>
                            <div class="carousel-item active">
                                <img src="<%= element.IMAGEPATH %>" alt=""> <!--change according to attribute name in database-->
                            </div>
                        <% }) %>

                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#show-photos" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#show-photos" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>

        </div>
    </section>

    <section id="body">
        <div class="container-fluid">
            <div class="property-info2">
                <div class="row">
                    <div class="col-lg-6 property-desc">
                        <div class="row">
                            <div class="col-lg-12 padded-col">
                                <div class="property-details-primary">
                                    <p>
                                        <span  id="host-name">Hosted by <%= result[0].HOSTNAME %> </span>
                                        
                                    </p>
                                    <span id="guest-number"><%= result[0].GUESTNUM %>  guests |</span>
                                    <span id="bedroom-number"><%= result[0].BEDROOMCNT %>  bedroom |</span>
                                    <span id="bath-number"><%= result[0].BATHROOMCNT %>  bath</span><br><br><br>
                                    <hr>
                                </div>

                            </div>
                            <div class="col-lg-12 padded-col">
                                <div class="property-details-primary">
                                    <p>
                                        Address: <%= result[0].SPECIFICADDRESS %>, <%= result[0].CITY %>, <%= result[0].COUNTRY %>
                                        
                                    </p>
                                    <p>
                                        <%= result[0].DESCRIPTION %>
                                    </p>
                                    <hr>
                                </div>

                            </div>
                            <div class="col-lg-12 padded-col lh-1">
                                <div class="amenities-details">
                                    <p class="fs-3 fw-bold">What this place offers</p>
                                    <div class="all-amenities">
                                        <div class="col-lg-6">
                                            <% amn.forEach(element => {%>
                                                <span><%= element.AMENITY%> </span><br>
                                           <% }) %>
                                        </div>
                                        
                                        <div class="col-lg-6">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 reservation padded-col">
                        
                        <div class="reservation-div rounded-3">

                            <p> 
                                <span class="fs-4 fw-bold mb-0" id="price">$<%= result[0].PRICEPERNIGHT %></span> night<br>
                                <% if(result[0].ISREFUNDABLE == '1') { %>
                                    <small>Cancellation Policy:<br>
                                        Refund Rate: <%= result[0].REFUNDRATE %> &percnt;<br>
                                        Cancellation Period: <%= result[0].CANCELLATIONPERIOD %> days
                                    </small>
                                <% }else{ %>
                                    <small>
                                        Cancellation Policy: Non-refundable
                                    </small>
                                <% }%>
                            </p>


                            <form name="reserve-form">
                                <div class="form-group row py-3">
                                    <label for="check-in">Check-In</label>
                                    <input type="date" id="check-in" name="check-in" required>
                                </div>
                                <div class="form-group row py-3">
                                    <label for="check-out">Check-Out</label>
                                    <input type="date" id="check-out" name="check-out" required>
                                </div>
                                <div class="form-group py-3">
                                    <label for="adult-number" class="form-label mt-2">Adults:</label>
                                    <input type="text" id="adult-number" name="adult-number" class="form-control guest-input" placeholder="0">

                                </div>
                                <div class="form-group py-3">
                                    <label for="children-number" class="form-label mt-2">Children:</label>
                                    <input type="text" id="children-number" name="children-number" class="form-control guest-input" placeholder="0">

                                </div>
                                <div class="reserve-button-div">
                                    <button type="submit" class="btn btn-outline-dark reserve-button">Reserve</button>
                                </div><br>
                            </form>


                            <span id="price-calc">$<%= result[0].PRICEPERNIGHT %> x <span id="total-days"></span> nights</span><span id="full-price">$10000</span><br>
                            
                            <hr class="mt-2 mb-2">

                            <span>Total price</span><span id="total-price">10000</span>
                        </div>
                    </div>

                </div>

                <hr>
                <div class="review-div">
                    
                    <p class="fs-3 fw-bold mt-3" id="review-number">
                        <i class="fa-regular fa-star icon"></i>This property has <%= review.length %> review. <br>
                        <span id="pRatning">Property Rating: <%= result[0].AVGRATING%>/5.0</span><br>
                        <span id="hRating">Host rating: <%= result[0].HOSTRATING %>/5.0</span>
                    </p>
                    
                    <% review.foreach( element => { %>
                    <div class="review">
                        <!-- add  image filepath of the user -->
                        <img src="<%= element.IMAGEPATH %>" /> 
                        <div class="review-content">
                            <p class="r-name"><%= element.FIRSTNAME%> <%= element.LastName %></p>
                            <p class="rating"><%= element.RATING %>/5.0 stars</p>
                            <p><%= element.COMMENTFORPROPERTY %></p>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>


        </div>

    </section>
    
    <script>

        function change(anchor) { //need to add query call here
            document.getElementById("wish").style.backgroundColor = "black";
            document.getElementById("wish").style.color = "white";
            document.getElementById("wish").innerHTML = 'Added to wishlist';
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</body>

</html>
