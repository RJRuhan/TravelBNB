<!DOCTYPE html>

<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title>Tourist Attraction Description</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;400;900&family=Ubuntu&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous"
          referrerpolicy="no-referrer" />

    <script src="https://kit.fontawesome.com/504d9b5831.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="./css/room.css">
</head>
<body>
    <section id="head">

        <div class="container-fluid">
            <!-- Nav Bar -->
            <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="">TravelBNB</a>
                <form class="navbar-form mx-auto my-auto" role="search">
                    <div class="input-group">
                        <input type="text" class="form-control-md-5 rounded-3" id="location" placeholder="Search for locations" name="location">
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-md rounded-3" style="padding:0;">
                                <img src="images/search.jpg" width="40" alt="search">
                            </button>
                        </span>
                    </div>
                </form>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link btn rounded-5" href=""> Switch to Hosting </a>
                    </li>
                    <li class="nav-item">
                        <div class="dropdown">
                            <a class="btn rounded-5" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa-solid fa-bars"></i><img src="images/profile.jpg" alt="profile" class="profile-img1">
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuLink">
                                <li><a class="dropdown-item" href="#"><b>Messages</b></a></li>
                                <li><a class="dropdown-item" href="#"><b>Notifications</b></a></li>
                                <li><a class="dropdown-item" href="#"><b>Trips</b></a></li>
                                <li><a class="dropdown-item" href="#"><b>Wishlists</b></a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item" href="#">Manage listings</a></li>
                                <li><a class="dropdown-item" href="#">Host an experience</a></li>
                                <li><a class="dropdown-item" href="#">Account</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item" href="#">Help</a></li>
                                <li><a class="dropdown-item" href="#">Log out</a></li>


                            </ul>
                        </div>
                    </li>
                </ul>

            </nav>
        </div>
        <div class="property-info1">
            <div class="property-title">
                
                    <span id="property-name">Lily Beach Resort & Spa, Maldives, With Pool</span>
                    <form >
                    <button class="btn rounded-3 wishlist" type="button" style="border:3px solid black" onclick="change()" id="wish">Mark as Visited</button>
                    </form>
                    <br />
                <a href="#" class="link-dark location"><span id="pLocation">Maldives</span></a>
            </div>

            <div class="container property-img-div">
                <div id="show-photos" class="carousel slide" data-bs-ride="carousel" data-interval="1000" data->
                    <div class="carousel-inner">

                        <% array.forEach(element => { %>
                            <div class="carousel-item active">
                                <img src="<%= element.IMAGEPATH %>" alt=""> <!--change according to attribute name in database-->
                            </div>
                        <% }) %>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#show-photos" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#show-photos" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>

        </div>
    </section>

    <section id="body">
        <div class="container-fluid">
            <div class="blank">
                &nbsp;
            </div>
            <div class="property-info2">
                <div class="ta-details-primary">
                    <p>
                        Location: <span id="location"><%= result[0].SPECIFICADDRESS %>, <%= result[0].CITY %>, <%= result[0].COUNTRY %></span><br>
                        Visit the website: <a href="<%= result[0].URL %>">Click Here!</a> 
                    </p>
                    <hr>
                    <p>
                        <%= result[0].DESCRIPTION %>
                    </p>
                    <hr>
                    

                </div>
                <hr>
                <div class="review-div">
                    <i class="fa-regular fa-star icon"></i>
                    <p class="fs-3 fw-bold mt-3" id="review-number">
                        This Tourist Spot has <%= review.length %> review. 
                    </p>
                    <% review.foreach( element => { %>
                    <div class="review">
                        <img src="images/defaultUser.jpg" />
                        <div class="review-content">
                            <p class="r-name"><%= element.FIRSTNAME %> <%= element.LASTNAME %></p>
                            <p class="rating"><%= element.RATING %>/5.0 stars</p>
                            <p><%= element.DESCRIPTION %></p>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>


        </div>

    </section>

    <script>
        function change() { //need to add query call here
            var check= document.getElementById("wish").innerHTML;
            console.log(check);

            if(check == 'Mark as Visited'){
                document.getElementById("wish").style.backgroundColor = "black";
                document.getElementById("wish").style.color = "white";
                document.getElementById("wish").innerHTML = 'Visited';
            }
            else{
                document.getElementById("wish").style.backgroundColor = "white";
                document.getElementById("wish").style.color = "black";
                document.getElementById("wish").innerHTML = 'Mark as Visited';
            }
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>

</body>
</html>